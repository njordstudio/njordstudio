---
import '../style/main.scss';
import Navigation from '../components/Navigation.astro';
import Hamburger from './Hamburger.astro';
import nsLogo from "/src/assets/logo/NS_logo_white.svg";
import Lightbox from '@julian_cataldo/astro-lightbox/LightBox.astro';
---

<html lang="en">
    <head>
        <meta charset="utf-8" />

        <!-- Google Analytics through Partytown -->
        <script
        type="text/partytown"
        src="https://www.googletagmanager.com/gtag/js?id=G-K4R0YCB5C8">
        </script>
        <script type="text/partytown">
        window.dataLayer = window.dataLayer || [];
        function gtag() {
        dataLayer.push(arguments);
        }
        gtag("js", new Date());
        gtag("config", "G-K4R0YCB5C8");
        </script>

        <!-- Favicons -->
        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
        <link rel="manifest" href="/site.webmanifest">
        <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
        <meta name="msapplication-TileColor" content="#da532c">
        <meta name="theme-color" content="#000000">

        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="generator" content={Astro.generator} />
        <meta name="description" content="Freelance CG Artist & Web Developer.">
        <meta name="copyright"content="NJORD Studio AB">
        <meta name="keywords" content="CG Artist, CGI, 3D, Web Developer"/>
        <title>NJORD</title>

        <!-- SOME -->
        <meta property="og:title" content="NJORD" />
        <meta property="og:description" content="Freelance CG Artist & Web Developer." />
        <meta property="og:type" content="website" />
        <!-- <meta property="og:url" content="https://www.example.com/page-url" /> -->
        <!-- <meta property="og:image" content="https://www.example.com/image.jpg" /> -->

        <!-- Google Font -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Mulish:ital,wght@0,200..1000;1,200..1000&display=swap" rel="stylesheet">

	</head>


    <body class="styledScrollbar">

        <header>
            <a href="/"><img class="headerLogo" src={nsLogo.src} alt="Logo" style="width: 56px; height: auto;" /></a>
            <Navigation />
            <Hamburger />
        </header>

        <Lightbox />